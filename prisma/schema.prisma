generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Business {
    id                          String  @id @default(auto()) @map("_id") @db.ObjectId
    resourceId                  String?                
    entryType                   String?
    recordName                  String
    recordSubtitle              String?
    listingType                 String
    recordSubtype               String?
    recordSubtypeBreakdown      String[]
    usageOrServiceSettings      String?
    address                     Address?
    listingDescription          String?
    parentCompanyDescription    String?
    sic                         Classification[]
    naics                       Classification[]
    onlinePresence              OnlinePresence?
    languages                   String[]
    agesServed                  String?
    servicesOffered             String[]
    diagnosisServed             String[]
    diagnosisNotServed          String[]
    symptomsSupported           String[]
    symptomsNotSupported        String[]
    supportedDDFunctionality    String?
    wheelchairAccessible        Boolean?
    businessHours               BusinessHours?
    pictures                    String[]
    videos                      String?
    reviews                     String[]
    linkedListings              String?
    singleLocationVsFranchise   String?
    verifiedUnverifiedResource  String?
}

type Address {
    street       String
    city         String
    state        String
    zipcode      String
    zipFour      String?
    county       String?
    neighborhood String?
    metroArea    String?
    country      String
}

type Classification {
  code        String?
  description String?
}

type OnlinePresence {
  email             String?
  telephoneNumber   String?
  website           String?
  twitter           String?
  linkedIn          String?
  facebook          String?
  instagram         String?
}

type BusinessHours {
  monday    DayHours?
  tuesday   DayHours?
  wednesday DayHours?
  thursday  DayHours?
  friday    DayHours?
  saturday  DayHours?
  sunday    DayHours?
}

type DayHours {
  open   String?
  close  String?
}
